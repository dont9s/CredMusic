<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/dim_56"
        android:layout_height="@dimen/dim_56"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_loading" />

    <Space
        android:id="@+id/space1"
        android:layout_width="@dimen/dim_16"
        android:layout_height="0dp"
        android:layout_toEndOf="@id/iv_cover"
        android:layout_toRightOf="@id/iv_cover" />

    <Space
        android:id="@+id/space2"
        android:layout_width="0dp"
        android:layout_height="@dimen/dim_4"
        android:layout_below="@id/tv_song"
        android:layout_toEndOf="@id/space1"
        android:layout_toRightOf="@id/space1" />


    <TextView
        android:id="@+id/tv_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/space1"
        android:layout_toRightOf="@id/space1"
        android:fontFamily="@font/roboto_black"
        android:maxLines="1"
        android:text="Memories"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16" />

    <TextView
        android:id="@+id/tv_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/space2"
        android:layout_toEndOf="@id/space1"

        android:layout_toRightOf="@id/space1"
        android:fontFamily="@font/roboto_regular"
        android:maxLines="1"
        android:text="Maroon 5"
        android:textColor="@color/button_bg_color"
        android:textSize="@dimen/text_14"
        android:textStyle="bold" />

</RelativeLayout>