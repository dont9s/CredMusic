<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_current_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_56"
        android:fontFamily="@font/roboto_black"
        android:text="@string/string_temp_degree"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_96" />

    <TextView
        android:id="@+id/tv_current_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_56"
        android:fontFamily="@font/roboto_thin"
        android:text="Gurgaon"
        android:textColor="@color/text_blue_light"
        android:textSize="@dimen/text_36" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_forecast"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dim_62"
        android:layout_weight="1"
        android:background="@color/text_white"
        android:padding="@dimen/text_16" />


</LinearLayout>