<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.hibrianlee.imageanalyzer.activity.GalleryActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="loadStatus"
            type="com.gojek.weather.helper.WeatherLoadStatus" />

        <variable
            name="viewModel"
            type="com.gojek.weather.viewmodel.WeatherViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Loading"
            android:visibility="@{viewModel.weatherLoadStatusLiveData == loadStatus.LOADING? View.VISIBLE:View.GONE}" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Loaded"
            android:visibility="@{viewModel.weatherLoadStatusLiveData == loadStatus.SUCCESS_LOADED? View.VISIBLE:View.GONE}" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Failure"
            android:visibility="@{viewModel.weatherLoadStatusLiveData == loadStatus.FAILURE_LOAD? View.VISIBLE:View.GONE}" />

    </FrameLayout>
</layout>